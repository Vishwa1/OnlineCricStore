@model CricStore.Domain.Entities.Basket

@{
    ViewBag.Title = "ShoppingSummary";
}

<h2>ShoppingSummary</h2>

<div id="cart">
    <span class="caption">
        <b>Your Cart:</b>
        @Model.Lines.Sum(x => x.Quantity) item(s),
        @Model.ComputeTotalValue().ToString("c")
    </span>

    @Html.ActionLink("CheckOut", "Index", "Basket", new { returnUrl = Request.Url.PathAndQuery }, null)
</div>
